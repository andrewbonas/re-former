<%=form_for @user do |f| %>
  <p>
    <%= f.label(:username, "Username") %>
    <%= f.text_field(:username) %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email, placeholder:"mail@example.com"%>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p> 
  <p>
    <%= f.submit "Submit"%>
<% end %>